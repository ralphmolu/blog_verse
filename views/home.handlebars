<div class="row">
    {{#each posts as |post|}}
    <div class="col-md-4 mb-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">{{post.title}}</h5>
                <p class="card-text">{{post.summary}}</p>
                <a href="#" class="btn btn-primary">Read More</a>
                <p class="text-muted small">Posted by {{post.user.username}} on {{formatDate post.createdAt}}</p>
            </div>
        </div>
    </div>
    {{/each}}
</div>