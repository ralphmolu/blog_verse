{{> navbar}}
<main class="container mt-3">
    <div class="row">
        <div class="col-md-12">
            <h2>{{title}}</h2>
            <p>Posted by {{user.username}} on {{formatDate createdAt}}</p>
            <p>{{content}}</p>
        </div>
    </div>
    {{#if logged_in}}
    <div class="row mt-4">
        <div class="col-md-12">
            <h3>Comments</h3>
            <form id="comment-form">
                <textarea class="form-control" name="content" placeholder="Add a comment" required></textarea>
                <button class="btn btn-primary mt-2" type="submit">Submit</button>
            </form>
        </div>
    </div>
    {{/if}}
    <div class="row mt-4">
        {{#each comments}}
        <div class="col-md-12">
            <p><strong>{{user.username}}:</strong> {{this.content}}</p>
        </div>
        {{/each}}
    </div>
</main>
{{> footer}}
