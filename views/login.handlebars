

<div class="container mt-3">
    <div class="row justify-content-between">
        <div class="col-md-5">
            <h2 class="page-title">Login</h2>
            <form class="form login-form" action="/users/login" method="POST">
                <div class="form-group">
                    <label for="email-login">Email:</label>
                    <input class="form-control" type="email" name="email" id="email-login" required />
                </div>
                <div class="form-group">
                    <label for="password-login">Password:</label>
                    <input class="form-control" type="password" name="password" id="password-login" required />
                </div>
                <div class="form-group">
                    <button class="btn btn-primary" type="submit">Login</button>
                </div>
            </form>
        </div>
    </div>
</div>